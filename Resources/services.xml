<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="services/data_managers.xml"/>
        <import resource="services/commands.xml"/>
        <import resource="services/factories.xml"/>
        <import resource="services/article_writer.xml"/>
        <import resource="services/db_adapters.xml"/>
        <import resource="services/controllers.xml"/>
        <import resource="services/transformers.xml"/>
        <import resource="services/fileReader.xml"/>
        <import resource="services/fileWriter.xml"/>
    </imports>
    <services>
        <service id="SwagImportExport\Components\Utils\FileHelper"/>

        <service id="SwagImportExport\Subscribers\Cronjob">
            <argument id="swag_import_export.auto_importer" type="service"/>

            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="SwagImportExport\Subscribers\ControllerSubscriber">
            <argument>%swag_import_export.plugin_dir%</argument>
            <argument type="service" id="template"/>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="SwagImportExport\Components\Service\UnderscoreToCamelCaseService"
                 public="true"/>
        <service id="swag_import_export.underscore_camelcase_service" alias="SwagImportExport\Components\Service\UnderscoreToCamelCaseService" public="true"/>

        <service
            id="SwagImportExport\Components\UploadPathProvider">
            <argument type="expression">service('application').DocPath()</argument>
        </service>

        <service id="swag_import_export.upload_path_provider" alias="SwagImportExport\Components\UploadPathProvider" public="true"/>

        <service
            id="SwagImportExport\Components\Service\AutoImportService"
        >
            <argument type="service" id="SwagImportExport\Components\UploadPathProvider"/>
            <argument type="service" id="models"/>
            <argument type="service" id="SwagImportExport\Components\Factories\ProfileFactory"/>
        </service>
        <service id="swag_import_export.auto_importer" alias="SwagImportExport\Components\Service\AutoImportService" public="true"/>


        <service id="SwagImportExport\Components\Service\ProfileService">
            <argument type="service" id="models"/>
            <argument type="service" id="file_system"/>
            <argument type="service" id="snippets"/>
        </service>
        <service id="swag_import_export.profile_service" alias="SwagImportExport\Components\Service\ProfileService" public="true"/>

        <service id="SwagImportExport\Components\Service\ExportService">
            <argument type="service" id="SwagImportExport\Components\Service\ImportExportServiceHelper"/>
        </service>
        <service id="swag_import_export.export_service" alias="SwagImportExport\Components\Service\ExportService" public="true"/>

        <service id="SwagImportExport\Components\Service\ImportService">
            <argument type="service" id="SwagImportExport\Components\Service\ImportExportServiceHelper"/>
            <argument type="service" id="SwagImportExport\Components\Factories\FileIOFactory"/>
            <argument type="service" id="SwagImportExport\Components\Factories\DataTransformerFactory"/>
            <argument type="service" id="SwagImportExport\Components\UploadPathProvider"/>
            <argument type="service" id="SwagImportExport\Components\Factories\ProfileFactory"/>
            <argument type="service" id="SwagImportExport\Components\Logger\Logger"/>
            <argument type="service" id="config"/>
        </service>

        <service id="swag_import_export.import_service" alias="SwagImportExport\Components\Service\ImportService" public="true"/>

        <service id="SwagImportExport\Components\Service\ImportExportServiceHelper">
            <argument type="service" id="SwagImportExport\Components\Factories\ProfileFactory"/>
            <argument type="service" id="SwagImportExport\Components\Factories\FileIOFactory"/>
            <argument type="service" id="SwagImportExport\Components\Factories\DataFactory"/>
            <argument type="service" id="SwagImportExport\Components\Factories\DataTransformerFactory"/>
            <argument type="service" id="SwagImportExport\Components\Logger\Logger"/>
            <argument type="service" id="swag_import_export.upload_path_provider"/>
            <argument type="service" id="auth"/>
            <argument type="service" id="shopware_media.media_service"/>
            <argument type="service" id="config"/>
        </service>

        <service id="SwagImportExport\Components\Logger\Logger" public="true">
            <argument type="service" id="SwagImportExport\Components\FileIO\CsvFileWriter"/>
            <argument type="service" id="models"/>
            <argument>%shopware.app.rootDir%/var/log</argument>
        </service>
        <service id="swag_import_export.logger" alias="SwagImportExport\Components\Logger\Logger" public="true"/>

        <service id="SwagImportExport\CustomModels\ProfileRepository">
            <factory service="models" method="getRepository"/>
            <argument>SwagImportExport\CustomModels\Profile</argument>
        </service>

        <service id="SwagImportExport\Components\DbalHelper">
            <argument type="service" id="dbal_connection"/>
            <argument type="service" id="models"/>
            <argument type="service" id="events"/>
        </service>

        <service id="SwagImportExport\Components\Utils\SnippetsHelper"/>
    </services>
</container>
