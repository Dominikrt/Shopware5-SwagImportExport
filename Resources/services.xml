<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Shopware\Components\SwagImportExport\Utils\FileHelper"/>

        <service id="Shopware\Subscribers\Cronjob">
            <argument id="service_container" type="service"/>

            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="Shopware\Subscribers\ControllerSubscriber">
            <argument>%swag_import_export.plugin_dir%</argument>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="Shopware\Subscribers\ControllerRegistration\BackendControllerSubscriber">
            <argument>%swag_import_export.plugin_dir%</argument>
            <argument type="service" id="template"/>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="Shopware\Subscribers\ControllerRegistration\FrontendControllerSubscriber">
            <argument>%swag_import_export.plugin_dir%</argument>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="Shopware\Commands\SwagImportExport\ImportCommand">
            <argument type="service" id="Shopware\Components\SwagImportExport\Factories\ProfileFactory"/>
            <argument type="service" id="Shopware\Components\SwagImportExport\UploadPathProvider"/>
            <argument type="service" id="models"/>
            <argument type="service" id="Shopware\CustomModels\ImportExport\ProfileRepository"/>

            <tag name="console.command" command="sw:importexport:import"/>
        </service>

        <service id="Shopware\Commands\SwagImportExport\ExportCommand">
            <argument type="service" id="Shopware\CustomModels\ImportExport\ProfileRepository"/>
            <argument type="service" id="models"/>

            <tag name="console.command" command="sw:importexport:export"/>
        </service>

        <service id="Shopware\Commands\SwagImportExport\ProfilesCommand">
            <argument type="service" id="Shopware\CustomModels\ImportExport\ProfileRepository"/>
            <argument type="service" id="models"/>

            <tag name="console.command" command="sw:importexport:profiles"/>
        </service>

        <service id="Shopware\Components\SwagImportExport\Factories\DataFactory" public="true">
            <tag name="import_export.proxyable"/>
        </service>

        <service id="Shopware\Components\SwagImportExport\Factories\ProfileFactory" public="true">
            <tag name="import_export.proxyable"/>
        </service>

        <service id="Shopware\Components\SwagImportExport\Factories\FileIOFactory" public="true">
            <tag name="import_export.proxyable"/>
        </service>

        <service id="Shopware\Components\SwagImportExport\Factories\DataTransformerFactory" public="true">
            <tag name="import_export.proxyable"/>
        </service>

        <service id="Shopware\Components\SwagImportExport\Service\UnderscoreToCamelCaseService"
                 public="true"/>
        <service id="swag_import_export.underscore_camelcase_service" alias="Shopware\Components\SwagImportExport\Service\UnderscoreToCamelCaseService" public="true"/>

        <service
            id="Shopware\Components\SwagImportExport\FileIO\CsvFileWriter"
        >
            <argument type="service" id="Shopware\Components\SwagImportExport\Utils\FileHelper"/>
        </service>
        <service id="swag_import_export.csv_file_writer" alias="Shopware\Components\SwagImportExport\FileIO\CsvFileWriter" public="true" />

        <service id="Shopware\Components\SwagImportExport\FileIO\CsvFileReader"
        >
            <argument type="service" id="Shopware\Components\SwagImportExport\UploadPathProvider"/>
        </service>
        <service id="swag_import_export.csv_file_reader" alias="Shopware\Components\SwagImportExport\FileIO\CsvFileReader" public="true"/>

        <service
            id="Shopware\Components\SwagImportExport\UploadPathProvider">
            <argument type="expression">service('application').DocPath()</argument>
        </service>

        <service id="swag_import_export.upload_path_provider" alias="Shopware\Components\SwagImportExport\UploadPathProvider" public="true"/>

        <service
            id="Shopware\Components\SwagImportExport\Service\AutoImportService"
        >
            <argument type="service" id="Shopware\Components\SwagImportExport\UploadPathProvider"/>
            <argument type="service" id="models"/>
            <argument type="service" id="Shopware\Components\SwagImportExport\Factories\ProfileFactory"/>
        </service>
        <service id="swag_import_export.auto_importer" alias="Shopware\Components\SwagImportExport\Service\AutoImportService" public="true"/>


        <service id="Shopware\Components\SwagImportExport\Service\ProfileService">
            <argument type="service" id="models"/>
            <argument type="service" id="file_system"/>
            <argument type="service" id="snippets"/>
        </service>
        <service id="swag_import_export.profile_service" alias="Shopware\Components\SwagImportExport\Service\ProfileService" public="true"/>

        <service id="Shopware\Components\SwagImportExport\Service\ExportService">
            <argument type="service" id="Shopware\Components\SwagImportExport\Factories\ProfileFactory"/>
            <argument type="service" id="Shopware\Components\SwagImportExport\Factories\FileIOFactory"/>
            <argument type="service" id="Shopware\Components\SwagImportExport\Factories\DataFactory"/>
            <argument type="service" id="Shopware\Components\SwagImportExport\Factories\DataTransformerFactory"/>
            <argument type="service" id="Shopware\Components\SwagImportExport\Logger\Logger"/>
            <argument type="service" id="swag_import_export.upload_path_provider"/>
            <argument type="service" id="auth"/>
            <argument type="service" id="shopware_media.media_service"/>
        </service>
        <service id="swag_import_export.export_service" alias="Shopware\Components\SwagImportExport\Service\ExportService" public="true"/>


        <service id="Shopware\Components\SwagImportExport\Service\ImportService">
            <argument type="service" id="Shopware\Components\SwagImportExport\Factories\ProfileFactory"/>
            <argument type="service" id="Shopware\Components\SwagImportExport\Factories\FileIOFactory"/>
            <argument type="service" id="Shopware\Components\SwagImportExport\Factories\DataFactory"/>
            <argument type="service" id="Shopware\Components\SwagImportExport\Factories\DataTransformerFactory"/>
            <argument type="service" id="Shopware\Components\SwagImportExport\Logger\Logger"/>
            <argument type="service" id="swag_import_export.upload_path_provider"/>
            <argument type="service" id="auth"/>
            <argument type="service" id="shopware_media.media_service"/>
        </service>
        <service id="swag_import_export.import_service" alias="Shopware\Components\SwagImportExport\Service\ImportService" public="true"/>

        <service id="Shopware\Components\SwagImportExport\Logger\Logger" public="true">
            <argument type="service" id="Shopware\Components\SwagImportExport\FileIO\CsvFileWriter"/>
            <argument type="service" id="models"/>
            <argument>%shopware.app.rootDir%/var/log</argument>
        </service>
        <service id="swag_import_export.logger" alias="Shopware\Components\SwagImportExport\Logger\Logger" public="true"/>

        <service id="Shopware\CustomModels\ImportExport\ProfileRepository">
            <factory service="models" method="getRepository"/>
            <argument>Shopware\CustomModels\ImportExport\Profile</argument>
        </service>

        <service id="Shopware\Components\SwagImportExport\DataManagers\Articles\ArticleDataManager" public="true">
            <argument type="service" id="db"/>
            <argument type="service" id="Shopware\Components\SwagImportExport\DbalHelper"/>

            <tag name="import_export.proxyable"/>
        </service>

        <service id="Shopware\Components\SwagImportExport\DataManagers\Articles\PriceDataManager" public="true">
            <tag name="import_export.proxyable"/>
        </service>

        <service id="Shopware\Components\SwagImportExport\DbalHelper">
            <argument type="service" id="dbal_connection"/>
            <argument type="service" id="models"/>
            <argument type="service" id="events"/>
        </service>
    </services>
</container>
